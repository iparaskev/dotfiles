alias ls='ls --color=auto'                       # Default ls
alias ubuntu='cd /mnt/ubuntu/home/iasonas'       # Go to ubuntu partition
alias rstudio='/usr/lib/rstudio/bin/rstudio'     # Run rstudio
alias grep='grep --color=auto'                   # Grep with colors
alias ranger='i3 workspace 5; xterm ranger'      # Open ranger on workspace 5
alias cp='cp -i'                                 # Safe from overwitting
alias mv='mv -i'                                 # Safe from overwitting
alias matlab='/home/iasonas/bu/mnt/ubuntu/usr/local/MATLAB/R2017a/bin/matlab'
alias feh='feh --scale-down'                     # Show images to fit screen
alias tmux='tmux -2'                             # Tmux messes up vim colors
# github aliases
alias gs='git status'
alias gf='git fetch'
alias ga='git add'
alias gd='git diff'
alias gl='git log'
alias gca='git commit --amend'
alias grh='git reset --hard'
