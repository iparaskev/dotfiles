!use 256 color
xterm*termName: xterm-256color

!ensure for utf-8
xterm*vt100.locale: true

!make alt behave as other terminals
xterm*vt100.metaSendsEscape: true

!show scrollbar
!xterm*vt100.scrollBar: true

!key bindings
xterm*vt100*translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

!fonts
!xterm*faceName: DejaVu Sans Mono Book
xterm*faceName: Anonymous Pro 
!xterm*faceName: xos4 Terminus
xterm*faceSize: 12
xterm*renderFont: true

!change colors
xterm*background: Grey23
xterm*foreground: Grey100

!xterm*vt100*color0: black
!color for errors 
xterm*vt100*color1: IndianRed      
!xterm*vt100*color2: green3
!xterm*vt100*color3: yellow3
!xterm*vt100*color4: blue2
!xterm*vt100*color5: magenta3
!xterm*vt100*color6: cyan3
!xterm*vt100*color7: gray90
!xterm*vt100*color8: gray50
xterm*vt100*color9: IndianRed
!xterm*vt100*color10: green
!xterm*vt100*color11: yellow
!xterm*vt100*color12: rgb:5c/5c/ff
!xterm*vt100*color13: magenta
!xterm*vt100*color14: cyan
!xterm*vt100*color15: white
